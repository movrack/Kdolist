{% extends '::base.html.twig' %}

{% block content_content %}
    <h1>Lists</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Event</th>
                <td>{{ entity.event }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('lists') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('lists_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
    </ul>
    {{ form(delete_form) }}
{% endblock %}
