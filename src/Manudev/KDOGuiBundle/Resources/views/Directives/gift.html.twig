<div class="col-sm-6 col-md-3 el">
    <div class="blog-item" data-toggle="modal" data-target="#modal">
        <div class="blog-image" >
            <img ng-src="http://k.loc/{{ '{{ gift.picture.web_path}}' }}" alt="blog post">
        </div>
        <div class="blog-caption">
            <h3 class="post-title">{{ '{{ gift.name}}' }}</h3>
            <p>{{ '{{ gift.description}}' }}</p>
            {{ '{{ gift.price }}' }} € ({{ '{{ gift.number_of_parts }}' }}  parts de 200 €)<br />
            Parts déjà offertes: {{ '{{ gift.gived_parts}}' }}<br />
            <div class="progress">
                <div class="progress-bar" data-percentage="{{ '{{ gift.percent_done}}' }}">
                    <span>Offert {{ '{{ gift.percent_done}}' }}%</span>
                </div>
            </div>

            <div class="clearfix">
                <div class="pull-left">
                    <a data-toggle="modal" data-target="#modal" class="read-more">read more</a>
                </div>
            </div>
        </div>
    </div>
</div>