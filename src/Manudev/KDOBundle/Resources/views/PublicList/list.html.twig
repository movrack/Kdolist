                                {% for parent in parents %}
                                    <li>
                                        <a href="{{ url('public_list', { 'list_id': parent.id, 'slug': parent.slug }) }}">
                                            {{ parent }}
                                        </a>
                                    </li>
                                {% endfor %}
                                <li class="active">{{ entity.title }}</li>
                            </ol>
                        </div>
                        {% if entity.gifts|length != 0 or entity.children|length != 0 %}
