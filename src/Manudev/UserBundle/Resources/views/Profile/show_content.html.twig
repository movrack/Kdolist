{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <h3>Profile</h3>
    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
    {#% render 'FOSUserBundle:Profile:edit' %#}
</div>


<h3>Compte bancaire</h3>
<div class="row">
    <div class="col-md-6">

        <h4>Comptes enregistr√©</h4>
        {% for accountNumber in user.bankaccounts %}
            {{ accountNumber.number }}<br />
        {% endfor %}
        {% if user.bankaccounts|length == 0 %}
            Vous n'avez pas encore enregistrer de compte bancaire.
        {% endif %}
    </div>
    <div class="col-md-6 ">
        <h4>Ajouter un compte</h4>
        <form action="{{ path('profile_createBankAccount', {'user_id': user.id}) }}"
              method="POST" class="form form-horizontal">

            {%  if form_errors(bankAccountForm.number)|length == 0 %}
                <div class="form-group">
                    <label class="col-sm-2 control-label">IBAN</label>
                    <div class="col-sm-10">
                        {{ form_widget(bankAccountForm.number) }}
                    </div>
                </div>
            {% else %}
            <div class="form-group has-error has-feedback">
                    <label class="col-sm-2 control-label">
                        IBAN <i class="fa fa-remove"></i>
                    </label>
                    <div class="col-sm-10">
                        {{ form_widget(bankAccountForm.number) }}


                        {{ form_errors(bankAccountForm.number) }}
                    </div>
                </div>
            {% endif %}

            <div class="form-group">
                <label class="col-sm-2 control-label">Description</label>
                <div class="col-sm-10">
                    {{ form_widget(bankAccountForm.description) }}
                </div>
            </div>
            {{ form_rest(bankAccountForm) }}

            <button type="submit" class="btn btn-success">
                <i class="fa fa-save"></i> Enregistrer
            </button>
        </form>
    </div>
</div>