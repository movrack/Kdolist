{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    {% trans_default_domain 'FOSUserBundle' %}

    <div class="fos_user_user_show">
        <h3>Profile</h3>
        <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
        <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
        {#% render 'FOSUserBundle:Profile:edit' %#}
    </div>


    <h3>Compte bancaire</h3>
    <div class="row">
        <div class="col-md-6">

            <h4>Comptes enregistr√©</h4>
            {% for accountNumber in user.bankaccounts %}
                <div class="row">
                    <div class="col-md-1">
                        <button class="btn btn-sm btn-danger removeBankAccount"
                                data-id="{{ accountNumber.id }}"
                                data-deletelink="{{ path('bankAccount_confirmDelete', {'id': accountNumber.id}) }}">
                            <i class="fa fa-trash"></i>
                        </button>
                    </div>
                    <div class="col-md-11">
                        {{ accountNumber.number }}
                    </div>
                </div>
            {% endfor %}
            {% if user.bankaccounts|length == 0 %}
                Vous n'avez pas encore enregistrer de compte bancaire.
            {% endif %}
        </div>
        <div class="col-md-6 ">
            <h4>Ajouter un compte</h4>
            <form action="{{ path('profile_createBankAccount', {'user_id': user.id}) }}"
                  method="POST" class="form form-horizontal">

                {%  if form_errors(bankAccountForm.number)|length == 0 %}
                    <div class="form-group">
                        <label class="col-sm-2 control-label">IBAN</label>
                        <div class="col-sm-10">
                            {{ form_widget(bankAccountForm.number) }}
                        </div>
                    </div>
                {% else %}
                    <div class="form-group has-error has-feedback">
                        <label class="col-sm-2 control-label">
                            IBAN <i class="fa fa-remove"></i>
                        </label>
                        <div class="col-sm-10">
                            {{ form_widget(bankAccountForm.number) }}
                            {{ form_errors(bankAccountForm.number) }}
                        </div>
                    </div>
                {% endif %}

                <div class="form-group">
                    <label class="col-sm-2 control-label">Description</label>
                    <div class="col-sm-10">
                        {{ form_widget(bankAccountForm.description) }}
                    </div>
                </div>
                {{ form_rest(bankAccountForm) }}

                <button type="submit" class="btn btn-success">
                    <i class="fa fa-save"></i> Enregistrer
                </button>
            </form>
        </div>
    </div>

    <div id="modalDelete" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Suppression compte bancaire</h4>
                </div>
                <div id="modal-body-delete" class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

{% endblock fos_user_content %}


{% block page_script %}
<script type="text/javascript">
    $(document).ready(function() {
        $('.removeBankAccount').on('click', function () {
            console.log($(this));
            console.log($(this).data("id"));
            console.log($(this).data("deletelink"));
            var deleteLink = $(this).data("deletelink");
            $.ajax({
                method: "GET",
                url: deleteLink,
                dataType: 'html',
                success: function( msg ) {
                        $('#modal-body-delete').html(msg);
                    },
                fail: function(data) {
                    alert( "error" +data);
                }
            });

            $('#modalDelete').modal('show');
        });
    });
</script>
{% endblock page_script %}