
{% trans_default_domain 'FOSUserBundle' %}

{%  block login_content %}

<div class="row">
    <div class="well col-md-6 col-md-offset-3">

        <form action="{{ path("fos_user_security_check") }}" method="post" role="form">

            {% if error %}
                <div class="alert alert-danger" role="alert">
                    Impossible de se connecter. Veuillez v√©rifier votre login ou votre mot de passe.
                </div>
            {% endif %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <div class="form-group">
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input  class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
            <div class="form-group">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input  class="form-control" type="password" id="password" name="_password" required="required" />
            </div>

            <div class="checkbox">
                <label for="remember_me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    {{ 'security.login.remember_me'|trans }}
                </label>
            </div>

            <input type="submit" class="btn btn-default"  id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            <a class="btn btn-info"href="{{ path("fos_user_registration_register") }}">Inscription</a>
        </form>
        <br />
        {{ render(url('hwi_oauth_connect')) }}<br />
        <br /></div>
</div>
{%  endblock %}
