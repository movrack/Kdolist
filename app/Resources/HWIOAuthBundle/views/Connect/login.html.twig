{% extends 'HWIOAuthBundle::empty.html.twig' %}

{% trans_default_domain 'HWIOAuthBundle' %}

{% block hwi_oauth_content %}
    {% if error is defined and error %}
        <span>{{ error }}</span>
    {% endif %}
    {% for owner in hwi_oauth_resource_owners() %}
        {%  if owner == 'google' %}
            <div class="btn-group btn-group-sm" role="group" >
                <button type="button" class="btn btn-default" style="background: #dd4b39; color: white;"><i class="fa fa-google-plus"></i></button>
                <a type="button" class="btn btn-default" style="background: #dd4b39; color: white;"
                   href="{{ hwi_oauth_login_url(owner) }}">Google
                </a>
            </div>
        {% elseif owner == 'facebook' %}
            <div class="btn-group btn-group-sm" role="group" >
                <button type="button" class="btn btn-default" style="background: #3b5998; color: white;"><i class="fa fa-facebook"></i></button>
                <a type="button" class="btn btn-default" style="background: #3b5998; color: white;"
                    href="{{ hwi_oauth_login_url(owner) }}">Facebook
                </a>
            </div>
        {#
         {% elseif owner == 'windows_live' %}
            <div class="btn-group btn-group-sm" role="group" >
                <button type="button" class="btn btn-default" style="background: #222222; color: white;"><i class="fa fa-windows"></i></button>
                <a class="btn btn-default" style="background: #222222; color: white;"
                  href="{{ hwi_oauth_login_url(owner) }}">Windows Live
                </a>
            </div>
            #}
        {% endif % }
    {% endfor %}
{% endblock hwi_oauth_content %}
